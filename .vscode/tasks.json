{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "bundle: jekyll: serve (Start Website) (Default)",
            "detail": "Run the Jekyll website locally to test it.",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "server-process"
            },
            "type": "process",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "serve",
                "--host", "0.0.0.0",
                "--watch",
                "--trace",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "owner": "jekyll",
                "applyTo": "allDocuments",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.*):([0-9]+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Configuration file: .*",
                    "endsPattern": "^Server running... press ctrl-c to stop\\.$"
                }
            },
        },
        {
            "label": "bundle: install (Install Dependencies)",
            "detail": "Install the Ruby gems. (pakcages to use by web server)",
            "icon": {
                "color": "terminal.ansiCyan",
                "id": "desktop-download",
            },
            "type": "shell",
            "command": "bundle",
            "args": [
                "install"
            ],
            "hide": true,
            "problemMatcher": [],
        },
    ]
}
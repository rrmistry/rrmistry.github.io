#!/usr/bin/env bash
set -e

echo "🔧 Running pre-commit checks..."

# Sync SvelteKit
echo "📦 Syncing SvelteKit..."
npx svelte-kit sync

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:unit -- --run

# Build the project
echo "🏗️  Building project..."
npm run build

# Run e2e tests
echo "🎭 Running e2e tests..."
npm run test:e2e

echo "✅ All pre-commit checks passed!"
